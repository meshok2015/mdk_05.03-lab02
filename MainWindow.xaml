<Window x:Class="fsdfssd.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Triangle Checker" Height="400" Width="600">
    <Grid Background="#FFEEF7FF">
        <TextBlock Text="Enter the lengths of the sides of the triangle"
                   FontSize="20" FontWeight="Bold" Foreground="#005A9C"
                   HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" />

        <!-- input field -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox x:Name="SideA" Width="200" Height="30" FontSize="16" Margin="0,10,0,0" />
            <TextBox x:Name="SideB" Width="200" Height="30" FontSize="16" Margin="0,10,0,0" />
            <TextBox x:Name="SideC" Width="200" Height="30" FontSize="16" Margin="0,10,0,0" />

            <!-- Check button -->
            <Button Content="Proverit" Width="150" Height="40" FontSize="16"
                    Background="#FFD700" Foreground="#005A9C" FontWeight="Bold"
                    Margin="0,20,0,0"
                    Click="CheckTriangle_Click" />
        </StackPanel>

        <!-- Result -->
        <TextBlock x:Name="ResultText" FontSize="18" FontWeight="Bold"
                   HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,30"
                   Foreground="#005A9C" TextAlignment="Center" Visibility="Collapsed" />
    </Grid>
</Window>